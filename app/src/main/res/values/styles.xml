<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- EditText. -->
    <style name="DropdownEditText">
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_gray</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textNoSuggestions|textMultiLine</item>
        <item name="android:longClickable">false</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>
